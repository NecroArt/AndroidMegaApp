<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE"
    android:fillViewport="true"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
             <RelativeLayout
            android:id="@+id/relative_layout_header"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            >
        -->

        <TextView
            android:id="@+id/text_view_version"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Версия" >
        </TextView>

        <TextView
            android:id="@+id/last_sms_date"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Дата обновления статуса" >
        </TextView>

        <!-- </RelativeLayout> -->

        <include
            android:id="@+id/golden_gate_include"
            layout="@layout/status_golden_gate"
            android:visibility="gone" />

        <include
            android:id="@+id/otrabotalo_include"
            layout="@layout/status_otrabotalo"
            android:visibility="gone" />

        <include
            android:id="@+id/nochyu_upalo_include"
            layout="@layout/status_nochyu_upalo"
            android:visibility="gone" />

        <include
            android:id="@+id/abontoday_include"
            layout="@layout/status_abontoday"
            android:visibility="gone" />

        <include
            android:id="@+id/viruchka_include"
            layout="@layout/status_viruchka"
            android:visibility="gone" />

        <include
            android:id="@+id/operativniy_include"
            layout="@layout/status_operativniy"
            android:visibility="gone" />

        <include
            android:id="@+id/send_imsi_include"
            layout="@layout/status_send_imsi"
            android:visibility="gone" />

        <include
            android:id="@+id/ftp_upl_include"
            layout="@layout/status_ftp_upl"
            android:visibility="gone" />

        <include
            android:id="@+id/vchera_upalo_include"
            layout="@layout/status_vchera_upalo"
            android:visibility="gone" />

        <include
            android:id="@+id/padalo_sem_dney_include"
            layout="@layout/status_padalo_sem_dney"
            android:visibility="gone" />

        <include
            android:id="@+id/svobodno_include"
            layout="@layout/status_svobodno"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/last_abon_dynamic_sms_date"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Дата обновления статуса" >
        </TextView>
        
        <include
            android:id="@+id/abon_dynamic_include"
            layout="@layout/abon_dynamic"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>