<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/operativniyLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/status_linear_layout_bottom_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/status_linear_layout_top_margin"
        android:background="@drawable/card"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/operativniyLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/operativniy_label" />

        <TableLayout
            android:id="@+id/operativniyTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/operativniyTableRowDays"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal" >
                <TextView
                    android:id="@+id/operativniyTextViewDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:text="1" />

                <TextView
                    android:id="@+id/operativniyTextViewDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:text="2" />

                <TextView
                    android:id="@+id/operativniyTextViewDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:text="3" />

                <TextView
                    android:id="@+id/operativniyTextViewDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:text="4" />

                <TextView
                    android:id="@+id/operativniyTextViewDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:text="5" />
            </TableRow>

            <TableRow
                android:id="@+id/operativniyTableRowValues"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal" >
                <ImageView
                    android:id="@+id/operativniyImageViewDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Последний статус дня"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:src="@drawable/error" />

                <ImageView
                    android:id="@+id/operativniyImageViewDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Последний статус дня"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:src="@drawable/warning" />

                <ImageView
                    android:id="@+id/operativniyImageViewDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Последний статус дня"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:src="@drawable/success" />

                <ImageView
                    android:id="@+id/operativniyImageViewDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Последний статус дня"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:src="@drawable/error" />

                <ImageView
                    android:id="@+id/operativniyImageViewDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Последний статус дня"
                    android:paddingBottom="@dimen/status_linear_layout_bottom_margin"
                    android:paddingTop="@dimen/status_linear_layout_top_margin"
                    android:src="@drawable/warning" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</merge>